blanco = #FFFFFF


*
	border 0px
	margin 0px
	padding 0px

body
	font-size 16px
	height 100%
	text-align center
	margin 0px
	padding 0px
	width 100%

header
	background-color rgba(0,0,0,0.70)
	float left
	height 100%
	width 25%
	h1
		color blanco
		font-size 1.3em
		font-weight 100
		margin 1.7em 0 .7em .7em
		text-align left
	h2
		color blanco
		font-size 1em
		font-style italic
		font-weight 100
		text-align left
		margin .3em 0 3em 1em

nav
	height auto
	margin 4em 0 0 0
	width 100%
	ul li
		font-size .8em
		font-weight 100
		text-align left
		list-style none
		margin 2em 1em 2em 1em
	a
		color blanco
		text-decoration none

.clear
	clear: both

.container
	background-color salmon
	height auto
	width 100%
	h6
		color blanco
		font-size .9em
		font-weight 100
		padding .5em 0 .5em 0
		margin 8em 0 0 0

.containerConBg
	background url(../img/bg.jpg) no-repeat center center fixed
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	height 100%
	left 0px
	position absolute
	top 0px
	width 100%


.miniFooter
	height auto
	width 100%

.redes
	height auto
	float right
	margin -6em 0 0 0
	width 28%
	h6
		margin 0px
		padding 1em 0 1em 1em
		text-align left
	ul li
		display inline-block
		float left
		list-style none
		margin-left .8em









